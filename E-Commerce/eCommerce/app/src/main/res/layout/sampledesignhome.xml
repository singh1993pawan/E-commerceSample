<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pyplyn.pawan.ecommerce.Home">

    <include layout="@layout/toolbar"
        android:id="@+id/home_toolbar">

    </include>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/mygallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view1"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/menCategory">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:id="@+id/card_image1"
                                android:scaleType="centerInside"
                                android:background="@drawable/f6"/>

                            <TextView
                                android:layout_width="100dp"
                                android:textAllCaps="true"
                                android:layout_marginTop="75dp"
                                android:text="Men"
                                android:gravity="center"
                                android:layout_height="wrap_content" />


                        </RelativeLayout>
                    </android.support.v7.widget.CardView>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/womenCategory">

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_view2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="2dp">

                            <ImageButton
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:scaleType="centerInside"
                                android:background="@drawable/f1"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_marginTop="75dp"
                                android:text="Women"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:layout_height="wrap_content" />


                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/kidsCategory">


                        <android.support.v7.widget.CardView
                            android:id="@+id/card_view3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="2dp">
                            <ImageButton
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:scaleType="centerInside"
                                android:background="@drawable/f2"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_marginTop="75dp"
                                android:text="Kids"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:layout_height="wrap_content" />

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/accessoriesCategory">

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_view4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="2dp">
                            <ImageButton
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:scaleType="centerInside"
                                android:background="@drawable/f3"/>
                            <TextView
                                android:layout_width="100dp"
                                android:textAllCaps="true"
                                android:layout_marginTop="75dp"
                                android:text="Accessories"
                                android:gravity="center"
                                android:layout_height="wrap_content" />

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/homeCategory">

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_view5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="2dp">
                            <ImageButton
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:scaleType="centerInside"
                                android:background="@drawable/f4"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_marginTop="75dp"
                                android:textAllCaps="true"
                                android:text="Home"
                                android:gravity="center"
                                android:layout_height="wrap_content" />
                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="18dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view8"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_height="270dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:background="@drawable/ban6"/>


                </android.support.v7.widget.CardView>

            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/myfashion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view9"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:scaleType="centerInside"
                            android:background="@drawable/ban1"/>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp">

                        <ImageButton
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:scaleType="centerInside"
                            android:background="@drawable/ban2"/>



                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp">
                        <ImageButton
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:scaleType="centerInside"
                            android:background="@drawable/ban5"/>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp">
                        <ImageButton
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:scaleType="centerInside"
                            android:background="@drawable/ban4"/>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp">
                        <ImageButton
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:scaleType="centerInside"
                            android:background="@drawable/ban6"/>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp">

                        <ImageButton
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:scaleType="centerInside"
                            android:background="@drawable/ban7"/>


                    </android.support.v7.widget.CardView>





                </LinearLayout>

            </HorizontalScrollView>

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="6dp"
                android:layout_height="270dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:background="@drawable/ban12"/>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="6dp"
                android:layout_height="200dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:background="@drawable/ban13"/>


            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
